  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
